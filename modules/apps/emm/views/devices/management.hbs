<div class="container">

	<div class="raw-fluid">
		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Device Management
						</div>
						
							<div class="pull-right">
									

								</div>

					</div>
					
					
					

					<div class="block-body block-body container-fluid raw-fluid">

						<div class="raw-fluid" style="margin-left: -25px">
							<div class="span2 operation-filter" style="display: none">
								<div class="control-group" >
									<label class="control-label" for="inputFirstName">Role</label>
									<div class="controls">
										<select class="multiselect" multiple="multiple" id="inputRoles" >
											{{#data.groups}}
												<option value="{{name}}">{{name}}</option>
											{{/data.groups}}
									 </select>
									</div>
								</div>
							</div>

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputLastName">Username</label>
									<div class="controls">
										<input type="text" id="inputUser" data-required="true">
									</div>
								</div>
							</div>

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputEmail">Device Type</label>
									<div class="controls">
										<select id="inputOS"  >
											<option value="">--All--</option>
											<option value="1">Android</option>
											<option value="3">iPad</option>
											<option value="2">iPhone</option>
										</select>
									</div>
								</div>
							</div>

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputOwnership" >Ownership</label>
									<div class="controls">
										<select id="inputOwnership">
											<option value="">--All--</option>
											<option value="1">BYOD</option>
											<option value="0">COPE</option>
										</select>
									</div>
								</div>
							</div>
							
							
							<div class="span2 operation-filter">								
								<div class="control-group">
									<label class="control-label" for="inputPassword" >&nbsp;</label>
									<div class="controls">
										<a class="btn btn-orange" id="btn-find" href="#" ><i class="icon-search icon-white"></i> Find</a>
									</div>
								</div>
							</div>
							
							
						</div>		
												

						<div class="raw">

							<div class="span11">						

								<table cellpadding="0" cellspacing="0" border="0"
								class="table table-striped table-bordered" id="main-table">
									<thead>
										<tr>											
											<th style="display: none">Id</th>
											<th>IMEI</th>
											<th>Username</th>
											<th>Platform</th>
											<th>OS version</th>
											<th>Name</th>											
										</tr>
									</thead>
									<tbody>

									</tbody>									
								</table>
								
								<div class="raw">
									<select name="featureList" id="featureList" class="dropdownimage" style="width:300px">
										<option value="">-- Select an operation to apply --</option>
										{{#data.features}}{{#compare feature_type 'OPERATION'}}
										<option value="{{name}}" data-template="{{template}}" data-image="{{../../resourcePath}}features/{{name}}.png">{{description}}</option>
										{{/compare}}{{/data.features}}
									</select>
								</div>

							</div>
						</div>

					</div>
				</div>
			</div>

		</div>

	</div>

</div>

<!-- Modal Features -->
<div id="featureModal" class="modal hide" tabindex="-1" role="dialog" aria-hidden="true">

</div>
