<!-- Change Password Modal -->
<div id="modalChangePassword" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 id="myModalLabel">Change Password</h4>
    </div>
    <div class="modal-body">
        <div class="raw-fluid">
            <div class="feature-lable">
                Old Password:
            </div>
            <input type="password" id="modalChangePasswordTxtOldPassword" class="feature-input" data-required="true">
        </div>
        <div class="raw-fluid">
            <div class="feature-lable">
                New Password:
            </div>
            <input type="password" id="modalChangePasswordTxtPassword" class="feature-input" data-required="true">
        </div>
        <div class="raw-fluid">
            <div class="feature-lable">
                Confirm New Password:
            </div>
            <input type="password" id="modalChangePasswordTxtPasswordConf" class="feature-input" data-required="true">
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-orange" id="modalChangePasswordButton">Save changes</button>
    </div>
</div>