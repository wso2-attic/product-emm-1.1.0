<div class="container">

	<div class="raw-fluid">
		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Device Compliance Monitoring
						</div>
						
							<div class="pull-right">
									

								</div>

					</div>
					
					
					

					<div class="block-body block-body container-fluid raw-fluid">

						<div class="raw-fluid" style="margin-left: -25px">
							
							<form method="post" enctype="multipart/form-data">

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputLastName">Start Date</label>
									<div class="controls">
										   
										 <div class="input-append date datepicker"  data-date="" data-date-format="yyyy-mm-dddd">
				<input id="startdate" name="startdate" class="span2" size="16" type="text" value="{{data.inputData.startdate}}"  >
				<span class="add-on"><i class="icon-th"></i></span>
			  </div>
									  
									</div>
								</div>
							</div>
							
							
							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputLastName">End Date</label>
									<div class="controls">
										   
										 <div class="input-append date datepicker"  data-date="" data-date-format="yyyy-mm-dddd">
				<input id="enddate" name="enddate" class="span2" size="16" type="text" value="{{data.inputData.enddate}}" >
				<span class="add-on"><i class="icon-th"></i></span>
			  </div>
									  
									</div>
								</div>
							</div>
							
							
							
							<div class="span2 operation-filter" style="display: none">
								<div class="control-group">
									<label class="control-label" for="inputEmail">Username</label>
									<div class="controls">
										<input id="username" name="username" class="span2" size="16" type="text" value="{{data.inputData.username}}" >
									</div>
								</div>
							</div>
							
							

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputEmail">Status</label>
									<div class="controls">
										<select id="status" name="status" >
											<option {{#compare data.inputData.status ''}}selected="selected"{{/compare}} value="">--All--</option>
											<option {{#compare data.inputData.status 'PV'}}selected="selected"{{/compare}} value="PV">Policy Violated</option>
											<option {{#compare data.inputData.status 'B'}}selected="selected"{{/compare}} value="B">Blocked</option>
											<option {{#compare data.inputData.status 'A'}}selected="selected"{{/compare}} value="A">Policy Compliance</option>
										</select>
									</div>
								</div>
							</div>

							
							<div class="span2 operation-filter">								
								<div class="control-group">
									<label class="control-label" for="inputPassword" >&nbsp;</label>
									<div class="controls">
										<button class="btn btn-orange" type="sumbit" >Find</button>
									</div>
								</div>
							</div>
							
							</form>
							
							
						</div>		
												

						<div class="raw">

							<div class="span11">						

								<table cellpadding="0" cellspacing="0" border="0"
								class="table table-striped table-bordered" id="main-table">
									<thead>
										<tr>
											<th>Username</th>
											<th>IMEI</th>
											<th>Platform</th>
											<th>OS version</th>
											<th>Status</th>											
										</tr>
									</thead>
									<tbody>
										{{#data.results}}
											<tr>
												<td>{{user_id}}</td>
												<td><a href="devices_status?startdate={{../data.inputData.startdate}}&enddate={{../data.inputData.enddate}}&deviceid={{id}}&imei={{imei}}">{{imei}}</a></td>
												<td>{{platform_name}}</td>
												<td>{{os_version}}</td>
												<td>{{#compare status 'Policy Compliance'}}<span style="color:green">Policy Compliance</span>{{else}}<span style="color:red">{{status}}</span>{{/compare}}</td>
											</tr>
										{{/data.results}}
									</tbody>									
								</table>
								
							</div>
						</div>

					</div>
				</div>
			</div>

		</div>

	</div>

</div>

