		<Require feature="pubsub-2">
			<Param name="topics">
				<![CDATA[
				<Topic title="geodata" name="org.wso2.carbon-dev"
				description="Subscribes to wso2 data" type="object"
				subscribe="true"/>
				]]>
			</Param>
		</Require>
		<Require feature="dynamic-height"/>
	</ModulePrefs>
	<Content type="html">
		<![CDATA[

		<link rel="stylesheet" href="js/dojo/dijit/themes/claro/claro.css">
		
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type="text/javascript"></script>
		<script>
		dojoConfig = {parseOnLoad:true}
		</script>
		<script src="/portal/js/dojo/dojo/dojo.js" type="text/javascript"></script>
		<script src="/portal/gadgets/wso2-carbon-dev/js/wso2-carbon-dev.js" type="text/javascript"></script>
		<style>
			
		body{
		color:#333;
		font-family: 'Open Sans', sans-serif;
		}
		h1{
		font-size:18px;
		}
		h2{
		font-size:16px;
		font-weight:600;
		color:#898C8E;
		}
		.span-left{
		float:left;

		}
		.span-right{
		float:right;
		}
		ul{
		padding:0;
		}
		ul li{
		  font-size: 14px;
    height: 20px;
    line-height: 15px;
    list-style: none outside none;
    padding:5px;
		
		}
		
		ul li:hover{
		background:#f5f5f5;
		}
		#senders{
		height: 200px;
		overflow-y: auto;
		width: 100%;
		}
		.span-right{
		color:#16a085;
		font-weight:bold;
		margin-right:20px;
		}
		
