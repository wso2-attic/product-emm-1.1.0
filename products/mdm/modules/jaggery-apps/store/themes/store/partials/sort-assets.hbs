<div class="row-sort-assets">
	<div class="row-fluid">
		<div class="span8">
			{{#if categories}}
			<div id="breadcrumb">
				<div class="breadcrumb-l1">
					<div class="breadcrumb-head">
						{{#if selectedCategory}}
						<span>{{selectedCategory}}</span>
						{{else}}
						<span>All Categories</span>
						{{/if}}
						<i class="icon-caret-down"></i>
					</div>
					<ul class="breadcrumb-body">
						<li>
							<a href="{{url "/assets"}}/{{type}}">All Categories</a>
						</li>
						{{#each categories}}
						<li>
							<a href='{{url "/assets"}}/{{../../type}}?query=category:"{{this}}"'>{{this}}</a>
						</li>
						{{/each}}
					</ul>
				</div>
