<div class="container">

	<div class="raw-fluid">
		<ul class="breadcrumb">
			<li>
				<a href="configuration">Users</a><span class="divider">/</span>
			</li>
			<li class="active">
				Add
			</li>
		</ul>
	</div>

	<div class="raw-fluid">
		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Add User
						</div>

					</div>

					<div class="block-body">
						<form class="form-horizontal" data-validate="parsley">
							<div class="control-group">
								<label class="control-label" for="inputFirstName">First Name</label>
								<div class="controls">
									<input type="text" value="{{data.user.firstName}}" id="inputFirstName" class="input-xxlarge" data-required="true">
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="inputLastName">Last Name</label>
								<div class="controls">
									<input type="text"  value="{{data.user.lastName}}" id="inputLastName" class="input-xxlarge" data-required="true">
								</div>
							</div>
							<div class="control-group">
								<label class="control-label" for="inputEmail">Email</label>
								<div class="controls">
									<input type="text"  value="{{data.user.email}}" id="inputEmail" class="input-xlarge" data-trigger="change" data-type="email" data-required="true">
								</div>
							</div>		
							
							<div class="control-group">
								<label class="control-label" for="inputFirstName">Type</label>
								<div class="controls">
									User <input type="radio" class="radioUserType"  name="inputType" value="user" {{#compare data.user.user_type 'User' }}checked="checked"{{/compare}}> &nbsp;
									Administrator <input type="radio" class="radioUserType"  name="inputType" value="administrator"  {{#compare data.user.user_type 'Administrator' }}checked="checked"{{/compare}}> &nbsp;									
								</div>
							</div>


							<hr>
							<div class="offset1-5" >
								<a class="btn btn-orange" id="btn-add" href="#" >Edit</a>
							</div>

							<input type="hidden" id="tenantId" value="{{data.tenantId}}" />
						</form>
					</div>
				</div>
			</div>

		</div>

	</div>

</div>


<style>
	.info-container{
		display: none
	}
	
</style>
